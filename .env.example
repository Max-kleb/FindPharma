# Fichier .env.example pour Docker Compose
# ==========================================
# INSTRUCTIONS : 
# 1. Copiez ce fichier en .env : cp .env.example .env
# 2. Modifiez les valeurs selon votre environnement
# 3. NE JAMAIS committer le fichier .env !
# ==========================================

# ==========================================
# BASE DE DONNÉES POSTGRESQL
# ==========================================
POSTGRES_DB=findpharma
POSTGRES_USER=findpharmauser
POSTGRES_PASSWORD=changeme_secure_password_123

# ==========================================
# DJANGO BACKEND
# ==========================================
# Générer une clé secrète : python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-generate-a-new-one
DEBUG=True

# Hôtes autorisés (séparés par virgules)
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Configuration de la base de données
DATABASE_NAME=findpharma
DATABASE_USER=findpharmauser
DATABASE_PASSWORD=changeme_secure_password_123
DATABASE_HOST=db
DATABASE_PORT=5432

# ==========================================
# CORS - Cross-Origin Resource Sharing
# ==========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==========================================
# EMAIL (OPTIONNEL - Pour les notifications)
# ==========================================
# Pour Gmail, créez un "App Password" : https://myaccount.google.com/apppasswords
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# ==========================================
# ADMIN DJANGO (OPTIONNEL)
# ==========================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin123
DJANGO_SUPERUSER_EMAIL=admin@findpharma.local

# ==========================================
# REACT FRONTEND
# ==========================================
REACT_APP_API_URL=http://localhost:8000
